<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:background="@color/red_button"
    android:padding="10dp">

    <com.sheniff.rpfit.app.views.CircularTimerView
        android:id="@+id/messageBarCirclularTimerView"
        android:layout_width="@dimen/messageBarCircularTimerSize"
        android:layout_height="@dimen/messageBarCircularTimerSize"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/messagesBarMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/messageBarTextColor"
        android:textSize="16sp"
        android:layout_toLeftOf="@id/messageBarCirclularTimerView"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>